# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
# Para desarrollo local con Docker:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=supervision_db
DB_USER=postgres
DB_PASSWORD=postgres

# Para producción (Neon, Supabase, Railway, etc.):
# DB_HOST=ep-xxx.region.aws.neon.tech
# DB_PORT=5432
# DB_NAME=neondb
# DB_USER=usuario
# DB_PASSWORD=password

# ============================================
# CONFIGURACIÓN JWT
# ============================================
# IMPORTANTE: Genera una clave secreta segura (mínimo 32 caracteres)
JWT_SECRET=tu-secret-key-muy-segura-y-larga-minimo-32-caracteres-aleatorios
JWT_EXPIRES_IN=7d

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# CONFIGURACIÓN CORS
# ============================================
# URLs permitidas separadas por comas
CORS_ORIGIN=http://localhost:8080,http://127.0.0.1:8080
FRONTEND_URL=http://localhost:8080
